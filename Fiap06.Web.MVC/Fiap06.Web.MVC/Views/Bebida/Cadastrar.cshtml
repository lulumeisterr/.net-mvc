@model Fiap06.Web.MVC.Models.Bebida

@{
    /**/

    ViewBag.Title = "Cadastrar";
}

@if(TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<h2>Cadastrar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextBoxFor(b => b.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Preco)
        @Html.TextBoxFor(b => b.Preco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(b => b.Destilado)
        @Html.LabelFor(b => b.Destilado, new { @class = "form-control"})
    </div>
    <input type="submit" value="Cadastrar" id="btCadastro"/>
}

