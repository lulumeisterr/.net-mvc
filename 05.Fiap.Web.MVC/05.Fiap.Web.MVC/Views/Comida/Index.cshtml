@model _05.Fiap.Web.MVC.Models.Comida

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>



@using (Html.BeginForm())
{


    <div class="form-group">

        <div class="form-group">
            @Html.LabelFor(churros => churros.Nome)
            @Html.TextBoxFor(c => c.Nome)
        </div>

        <div class="form-group">
            @Html.LabelFor(churros => churros.Preco)
            @Html.TextBoxFor(c => c.Preco)
        </div>


        <div class="form-group">
            @Html.CheckBoxFor(churros => churros.Vegetariano)
            @Html.LabelFor(c => c.Vegetariano)
        </div>

        <div class="form-group">
            @Html.CheckBoxFor(churros => churros.Salgado)
            @Html.LabelFor(c => c.Salgado)
        </div>

        <div class="form-group">
            @Html.LabelFor(churros => churros.Descricao)
            @Html.TextAreaFor(c => c.Descricao)
        </div>


        <div class="form-group">
            @Html.LabelFor(churros => churros.Calorias)
            @Html.TextBoxFor(c => c.Calorias)
        </div>

        <input type="submit" value="Cadastrar" class="btn btn-primary" />

    </div>

}